{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Language & Module */
    "target": "ES2020", // modern but Node-friendly
    "module": "esnext", // works with ts-node + nodemon
    "moduleResolution": "Node", // resolve like Node.js
    "esModuleInterop": true, // allows default imports for CommonJS
    "resolveJsonModule": true, // so you can import JSON
    /* Types */
    "types": [
      "node"
    ], // include Node.js types
    "skipLibCheck": true,
    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    /* Clean Output */
    "removeComments": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true, // Ensures full paths are resolved, including extensions
  }
}